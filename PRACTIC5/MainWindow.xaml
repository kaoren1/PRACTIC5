<Window x:Class="PRACTIC5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRACTIC5"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid x:Name="Grid1">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="  Авторизация" VerticalAlignment="Center" FontSize="35" Grid.Row="0"></TextBlock>
        <TextBox x:Name="Login" Grid.Row="1"></TextBox>
        <PasswordBox x:Name="Password" Grid.Row="2"></PasswordBox>
        <Button Content="Авторизоваться" Grid.Row="3" x:Name="LIGHT" Style="{StaticResource MaterialDesignPaperSecondaryLightButton}" ToolTip="Resource name: MaterialDesignPaperSecondaryLightButton" Click="LIGHT_Click" />
    </Grid>
</Window>
