<Page x:Class="PRACTIC5.BPPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PRACTIC5"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BPPage">

    <Grid>
        <DataGrid x:Name="BP" AutoGenerateColumns="False" CanUserAddRows="False" SelectionChanged="BP_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер" Visibility="Collapsed" Binding="{Binding ID_BP}"></DataGridTextColumn>
                <DataGridTextColumn Header="Название БП" Binding="{Binding BPName}"></DataGridTextColumn>
                <DataGridTextColumn Header="Мощность" Binding="{Binding BPPower}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
