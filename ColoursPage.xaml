<Page x:Class="PRACTIC5.ColoursPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PRACTIC5"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ColoursPage">

    <Grid>
        <DataGrid x:Name="Colours" AutoGenerateColumns="False" CanUserAddRows="False" SelectionChanged="Colours_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер" Binding="{Binding ID_Colour}" Visibility="Collapsed"></DataGridTextColumn>
                <DataGridTextColumn Header="Цвет" Binding="{Binding ColourName}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
